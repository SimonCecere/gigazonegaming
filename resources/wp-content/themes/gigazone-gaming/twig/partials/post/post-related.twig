{% if related is defined and related is iterable %}
<div class="related-posts">
    <h3>Related:</h3>
    <div class="row row-flex row-flex-wrap">
    {% for post in related|slice(0, 4) %}
        <div class="col-sm-3">
            <div class="flex-col">
                <div class="related-posts-container">
                    <div class="related-posts-image">
                        {% if function('has_post_thumbnail', post) %}
                            <a href="{{ function('get_permalink', post) }}" style="background-image: url({{post.thumbnail.src}}); "></a>
                        {% endif %}
                    </div>
                    <div class="related-posts-title">
                        <h4 class="related-posts-title-text"><a href="{{ function('get_permalink', post) }}">{{ post.post_title }}</a></h4>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
</div>
{% endif %}