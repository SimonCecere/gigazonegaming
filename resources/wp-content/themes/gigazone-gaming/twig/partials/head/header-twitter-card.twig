{# Twitter Card #}
<meta name="twitter:card" content="summary">
<meta name="twitter:site" content="@gigazonegaming">
<meta name="twitter:title" content="{{ function('is_front_page') ? function('bloginfo','name') : post.title }}">
<meta name="twitter:description" content="{% if post.post_excerpt|length > 0 %}{{ post.post_excerpt }}{% else %}{{ function('bloginfo','name') }}{% if function('get_option','event_date') %} - {{ function('get_option','event_date') }} {{ function('get_option','event_location') }}{% endif %}{% endif %}">
<meta name="twitter:image" content="{% if function('has_post_thumbnail', post) %}{{ function('wp_get_attachment_url', function('get_post_thumbnail_id', post)) }}{% else %}{{ function('get_template_directory_uri') }}/screenshot.png{% endif %}" />
