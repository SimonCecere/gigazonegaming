{% if pagination is defined %}
    <hr class="divider horizontal dots" />
    <nav class="tool-pagination pagination-container">
        <ul class="pagination">
        {% if pagination.prev %}
            <li><a href="{{pagination.prev.link}}" class="prev {{pagination.prev.link|length ? '' : 'invisible'}}"><i class="fa fa-chevron-left" aria-hidden="true"></i></a></li>
        {% endif %}

            {% for page in pagination.pages %}
                <li>
                    {% if page.link %}
                        <a href="{{page.link}}" class="{{page.class}}">{{page.title}}</a>
                    {% else %}
                        <span class="{{page.class}}">{{page.title}}</span>
                    {% endif %}
                </li>
            {% endfor %}

        {% if pagination.next %}
            <li><a href="{{pagination.next.link}}" class="next {{pagination.next.link|length ? '' : 'invisible'}}"><i class="fa fa-chevron-right" aria-hidden="true"></i></a></li>
        {% endif %}
        </ul>
    </nav>
{% endif %}