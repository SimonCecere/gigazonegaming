%form{:class=>"form-horizontal doAjaxForm doGeoLocate doForm well well-gz", :id=>"updateSignUpForm", :method=>"post", :action=>"/app/updates/signup"}
  %fieldset
    %legend Sign up for updates
    .form-group
      %label{:class=>"col-md-3 control-label", :for=>"updateSignUpForm-email"}Your Email
      .col-md-5
        %input{:id=>"updateSignUpForm-email", :name=>"email", :type=>"email", :placeholder=>"Your Email Address", :class=>"form-control input-md", :required=>""}
    .form-group
      .col-md-9.col-md-push-3
        .checkbox
          %label{:for=>"updateSignUpForm-participate"}
            %input{:type=>"checkbox", :name=>"participate", :id=>"updateSignUpForm-participate", :value=>"yes"}
            I would like to participate in the tournament
    .form-group
      .col-md-9.col-md-push-3
        %button{:id=>"updateSignUpFormSubmit", :name=>"doSubmit", :class=>"btn btn-default btn-gz"}Submit
        %span{:class=>"fa-stack fa-lg progress-container", :style=>"display: none;"}
          %i{:class=>"fa fa-circle fa-stack-2x"}
          %i{:class=>"fa fa-refresh fa-spin fa-stack-1x fa-inverse"}
  .message-container