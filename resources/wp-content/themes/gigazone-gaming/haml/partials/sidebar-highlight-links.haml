{% if sidebar_highlight_links is defined and sidebar_highlight_links|length > 0 %}
{% for link in sidebar_highlight_links %}
.sidebar-highlight-link
  .sidebar-highlight-link-title
    {% if link.link_image|length > 0 %}
    %a{:href=>"{{link.link_url}}", :target=>"{{ link.link_target }}"}
      %img{:src => "{{link.link_image}}", :alt => "{{ link.link_name }}", :class=>"sidebar-hightlight-title"}
    {% else %}
    %h3{:class=>"sidebar-hightlight-title"}
      %a{:href=>"{{link.link_url}}", :target=>"{{ link.link_target }}"} {{ link.link_name }}
    {% endif %}
  %p{:class=>"sidebar-highlight-link-description"}
    {{ link.link_description }}
{% endfor %}
{% endif %}